# Flask Configuration
# Secret key for session signing and CSRF protection
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Flask environment: development or production
FLASK_ENV=development

# CORS Configuration (CRITICAL-003 Fix)
# Comma-separated list of allowed origins
# Development: http://localhost:5173,http://localhost:5555
# Production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5555

# Database path (optional, defaults to stock_tracker.db in project root)
# DATABASE_PATH=./stock_tracker.db

# Email Configuration
# Copy this file to .env and fill in your actual credentials

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password-here
RECIPIENT_EMAIL=recipient@example.com

# Telegram Configuration
# Get bot token from @BotFather on Telegram
# Get chat ID by sending a message to your bot and visiting:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here
